<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>View Course</title>
    <link href="../Core/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/master.css">
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/viewCourse.js"></script>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->
        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#" aria-current="page"><%=pageData.course.id%>: <%=pageData.course.name%></a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                        <i class="fa fa-solid fa-user fa-lg"></i>
                        <a class="nav-link" href="#" aria-current="page">Kris D'Souza</a>
                        <i class="fa fa-solid fa-sign-out-alt fa-lg ms-2"></i>
                        <a class="nav-link" href="#" aria-current="page">Logout</a>

                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">

            <!--Submission Card-->
            <div class="m-1 col">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <h4 class="card-title fw-bold"><%=pageData.course.department%> <%=pageData.course.id%>: <%=pageData.course.name%></h4>
                            <div class="list-group list-group mt-4">
                                <%for(var i=0;i<pageData.assignments.length;i++) {%>
                                    
                                    <div class="list-group-item d-flex flex-row justify-content-between align-items-center">
                                        <span><%=pageData.assignments[i].assnName%> </span>
                                        <div class="d-flex flex-row">
                                            <%if(pageData.assignments[i].grade!=undefined) {%>
                                                <span class="border rounded p-1 px-2 fw-bold text-white bg-success">Graded: <%=pageData.assignments[i].grade%>/<%=pageData.assignments[i].maxScore%></span>
                                        
                                            <% }else {%>
                                                <span class="border rounded p-1 px-2 fw-bold text-white bg-danger">Not Graded</span>
                                            <%}%>
                                            
                                        </div>
                                    </div>
                                <%}%>
                            </div>
                        </div>         
                    </div>
                </div>
            </div>

            <!--Quick Access card-->
            <div class="m-1 col-4">
                <div class="card h-100">
                    <div class="card-body h-100">
                        <h5 class="card-title fw-bold">Quick Access</h5>
                        <ul class="list-group">
                            <li class="list-group-item d-flex flex-row align-items-center"><i class="fa fa-solid fa-file-export fa-lg me-2"></i><span>Export Grades</span></li>
                            <li class="list-group-item border mt-1 d-flex flex-row align-items-center"><i class="fa fa-solid fa-book fa-lg me-2"></i><span>Manage Assignments</span></li>
                            <li class="list-group-item border mt-1 d-flex flex-row align-items-center"><i class="fa fa-solid fa-question fa-lg me-2"></i><span>Help & Support</span></li>
                        </ul>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>