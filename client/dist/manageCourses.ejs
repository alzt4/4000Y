<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manage Courses</title>
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/manageCourses.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->
        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" href="#" aria-current="page">Manage Courses</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                        <i class="fa fa-solid fa-user fa-lg"></i>
                        <a class="nav-link" href="#" aria-current="page">Kris D'Souza</a>
                        <i class="fa fa-solid fa-sign-out-alt fa-lg ms-2"></i>
                        <a class="nav-link" href="#" aria-current="page">Logout</a>

                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">


            <!--Submission Card-->
            <div class="m-1 col">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <h5 class="card-title fw-bold">Manage Courses</h5>
                            <div class="list-group list-group">
								<p> Thsi is a test of where things are</p>
								<%for(var i=0;i<courseNum;i++) { %>
								<div class="list-group-item d-flex flex-row justify-content-between align-items-center">
										<script>console.log("This is working.")</script>
										<p>This is a test string</p>
										<p><%=JSON.stringify(pageData.courses[i].department)%> <%=JSON.stringify(pageData.courses[i].courseId)%> - <%=JSON.stringify(pageData.courses[i].courseName)%></p>
										<a name="" id="" class="btn btn-warning" href="/editCourse?id=<%=pageData.courses[i].courseId%>" role="button"><i class="fa fa-solid fa-edit fa-lg"></i></a>
										<button type="button" name="<%=pageData.courses[i].courseId%>" id="" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" role="button"><i class="fa fa-solid fa-trash fa-lg"></i></a>
									</div>
									<div>
										<!-- This is where the buttons would be if I need to put the them in-->
									</div>
								<% } %>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Quick Access card-->
            <div class="m-1 col-4">
                <div class="card h-100">
                    <div class="card-body h-100">
                        <h5 class="card-title fw-bold">Quick Access</h5>
                        <ul class="list-group">
                            <li class="list-group-item border mt-1 d-flex flex-row align-items-center"><i
                                    class="fa fa-solid fa-question fa-lg me-2"></i><span>Help & Support</span></li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Delete Course?</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this course? All associated assignments and submissions will be lost.
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-danger" id="DelButton">Delete</button>
            </div>
          </div>
        </div>
      </div>
</body>

</html>