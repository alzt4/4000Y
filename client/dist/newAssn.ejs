<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>New Assignment</title>
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/newAssn.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->
        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#" aria-current="page">New Assignment</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                        <i class="fa fa-solid fa-user fa-lg"></i>
                        <a class="nav-link" href="#" aria-current="page">Kris D'Souza</a>
                        <i class="fa fa-solid fa-sign-out-alt fa-lg ms-2"></i>
                        <a class="nav-link" href="#" aria-current="page">Logout</a>

                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">

            <!--Submission Card-->
            <div class="m-1 col-8">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <h4 class="card-title fw-bold">New Assignment
                            </h4>
                            <div>
                                <div class="form-group mt-2 mb-2">
                                    <label for="assnName">Assignment Name:</label>
                                    <input name="assnName" type="text" class="form-control" placeholder="Enter name">
                                    <small id="emailHelp" class="form-text text-muted">Maximum of 100
                                        characters.</small>
                                </div>

                                <div class="mt-2 mb-2">
                                    <label for="assnDescrip" class="form-label">Assignment Description</label>
                                    <textarea name="assnDescrip" class="form-control" id="assnDescrip"
                                        rows="3"></textarea>
                                </div>

                                <div class="form-group mt-2 mb-2">
                                    <label for="maxScore">Maximum Score</label>
                                    <input type="number" class="form-control" id="maxScore" name="maxScore" min="1"
                                        max="100">
                                </div>

                                <div class="form-group mt-2 mb-2">
                                    <label for="dueDate">Due date:</label>
                                    <input class="form-control" type="date" id="dueDate" name="dueDate" />
                                </div>

                                <div class="form-group mt-2 mb-2">
                                    <label for="assnLang">Language:</label>
                                    <select name="assnLang" class="mt-2 form-select"
                                        aria-label="Select Language For Assignment">
                                        <option value="-1" selected>Select a language..</option>
                                        <option value="1">Python</option>
                                        <option value="2">C++</option>
                                    </select>
                                </div>


                                <button id="submitBtn" type="button" class="btn btn-dark">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="m-1 col-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0 d-flex flex-column">

                            <div class="h-100">
                                <div class="d-flex flex-row justify-content-between align-items-center">

                                    <h5 class="card-title fw-bold">Required Files:
                                    </h5>

                                    <button type="button" class="btn btn-dark fw-medium" data-bs-toggle="modal"
                                        data-bs-target="#addReqModal">
                                        <i class="fa fa-solid fa-plus fa-lg pe-1"></i>
                                        Add
                                    </button>

                                </div>

                                <div class="mt-2 mb-2">
                                    <ul class="list-group" id="reqFiles">
                                        <li id="fileReqPh"
                                            class="list-group-item d-flex flex-row justify-content-between align-items-center mb-1">
                                            <span class="fst-italic">No required files setup yet.</span>
                                        </li>
                                    </ul>
                                </div>

                            </div>

                            <div>
                                <div class="d-flex flex-row justify-content-between align-items-center">

                                    <h5 class="card-title fw-bold">Unit Test:
                                    </h5>

                                    <button type="button" class="btn btn-dark fw-medium" data-bs-toggle="modal"
                                        data-bs-target="#addUnitModal">
                                        <i class="fa fa-solid fa-plus fa-lg pe-1"></i>
                                        Add
                                    </button>

                                </div>

                                <div class="mt-2 mb-2">
                                    <ul id="unitTests" class="list-group">
                                        <li id="fileUnitPh"
                                            class="list-group-item d-flex flex-row justify-content-between align-items-center mb-1">
                                            <span class="fst-italic">No unit tests attached yet.</span>
                                        </li>
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="addReqModal" tabindex="-1" aria-labelledby="addReqModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addReqModalLabel">Add Required File & Unit Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="">

                        <div class="form-group">
                            <label for="reqFileName">File Name:</label>
                            <input name="reqFileName" type="text" class="mt-2 form-control" placeholder="Enter name">

                        </div>

                        <div class="mt-2 mb-2">
                            <label for="reqFileLang">Language:</label>
                            <select name="reqFileLang" class="mt-2 form-select"
                                aria-label="Select Language For Requirement">
                                <option value="-1" selected>Select a language..</option>
                                <option value="1">Python</option>
                                <option value="2">C++</option>
                                <option value="3">Requirement Txt</option>
                            </select>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success">Add</button>
                </div>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="addUnitModal" tabindex="-1" aria-labelledby="addUnitModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addUnitModalLabel">Add Unit Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <label for="unitTestName">Unit Test Name:</label>
                        <input name="unitTestName" type="text" class="mt-2 form-control" placeholder="Enter name">

                    </div>

                    <label id="uploadUnitTest" class="btn btn-dark fw-medium mt-2">
                        <i class="fa fa-solid fa-plus fa-lg pe-1"></i>
                        Upload
                        <input class="d-none" id="uploadUnit" type="file">
                    </label>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success">Add</button>
                </div>
            </div>
        </div>
    </div>

    <template id="fileTemplate">
        <li class="list-group-item d-flex flex-row justify-content-between align-items-center border">
            <span>fileplaceholder</span>
        </li>
    </template>

    <template id="unitTemp">
        <div class="mt-2 list-group">
            <div class="list-group-item d-flex flex-row justify-content-between align-items-center border">
                <span>fileplaceholder</span>
            </div>
        </div>
    </template>

    <template id="reqAddTemp">
        <li class="list-group-item d-flex flex-row justify-content-between align-items-center border">
            <span>fileplaceholder</span>
            <span class="border rounded p-1 px-2">langPlaceHolder</span>
        </li>
    </template>

</body>

</html>