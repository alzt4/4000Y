<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>New Assignment</title>
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/newAssn.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->
        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#" aria-current="page">New Assignment</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto d-flex flex-row align-items-center">
                        <i class="fa fa-solid fa-user fa-lg"></i>
                        <a class="nav-link" href="#" aria-current="page">Kris D'Souza</a>
                        <i class="fa fa-solid fa-sign-out-alt fa-lg ms-2"></i>
                        <a class="nav-link" href="#" aria-current="page">Logout</a>

                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">

            <!--Submission Card-->
            <div class="m-1 col-8">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <h4 class="card-title fw-bold">Assignment Details
                            </h4>
                            <div>
                                <div class="form-group mt-2 mb-2">
                                    <label for="exampleInputEmail1">Assignment Name:</label>
                                    <input type="text" class="form-control" placeholder="Enter name">
                                    <small id="emailHelp" class="form-text text-muted">Maximum of 100
                                        characters.</small>
                                </div>

                                <div class="mt-2 mb-2">
                                    <label for="" class="form-label">Assignment Description</label>
                                    <textarea class="form-control" name="" id="" rows="3"></textarea>
                                </div>

                                <div class="form-group mt-2 mb-2">
                                    <label for="maxScore">Maximum Score</label>
                                    <input type="number" class="form-control" id="maxScore" name="maxScore" min="1" max="100"> 
                                </div>

                                <div class="form-group mt-2 mb-2">
                                    <label for="start">Due date:</label>
                                    <input class="form-control" type="date" id="dueDate" name="dueDate" />
                                </div>

                                

                                <button type="button" class="btn btn-dark">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="m-1 col-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <h4 class="card-title fw-bold">Required Files & Unit Tests:
                            </h4>

                            <div>
                                <div class="d-flex flex-row justify-content-between align-items-center">
                                    <span>Required Files and Unit Tests:</span>

                                    <button type="button" class="btn btn-dark fw-medium" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">
                                        <i class="fa fa-solid fa-plus fa-lg pe-1"></i>
                                        Add
                                    </button>
                                </div>
                                <div class="mt-2 mb-2">
                                    <ul class="list-group">
                                        <li class="list-group-item p-3 d-flex flex-row justify-content-between align-items-center">
                                            <div>
                                                <i class="fa fa-solid fa-file fa-lg pe-1"></i>
                                                <span>test.py</span>
                                            </div>

                                            <span class="border p-1 rounded-2 text-center">
                                                Test Unit Test
                                            </span>
                                        </li>
                                      </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Required File & Unit Test</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="">

                        <div class="form-group">
                            <label for="exampleInputEmail1">File Name:</label>
                            <input type="text" class="mt-2 form-control" placeholder="Enter name">

                        </div>

                        <div class="mt-2 mb-2">
                            <label for="exampleInputEmail1">Language:</label>
                            <select class="mt-2 form-select" aria-label="Default select example">
                                <option selected>Select a language..</option>
                                <option value="1">Python</option>
                                <option value="2">C++</option>
                            </select>
                        </div>

                        <div class="mt-2 mb-2 form-group">
                            <label for="exampleInputEmail1">Unit Test Name:</label>
                            <input type="text" class="mt-2 form-control" placeholder="Enter name">

                        </div>

                        <div class="mt-3 mb-2">
                            <label for="fileUpload" class="file-upload btn btn-dark btn-block"> <i
                                class="fa fa-solid fa-file fa-lg pe-1"></i>
                            Attach Unit Test File
                            <input class="d-none" id="fileUpload" type="file" multiple>
                        </label>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success">Add</button>
                </div>
            </div>
        </div>
    </div>
</body>

</html>