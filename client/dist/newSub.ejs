<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>New Submission</title>
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/newSub.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</head>

<body>

    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->


        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page">
                                <%=pageData.course.name%>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href=<%=`/assnSubHome?assnID=${pageData.assignment.id}`%>>
                                <%=pageData.assignment.name%>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#">New Submission</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">

            <!--Submission Card-->
            <div class="m-1 col-8">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0 mb-4">
                            <h5 class="card-title fw-bold">NEW SUBMISSION</h5>
                            <div>
                                <h6>Attached files:</h6>
                                <div id="fileList" class="list-group list-group">
                                    <div id="noFilePlaceHolder"
                                        class="list-group-item d-flex flex-row justify-content-between align-items-center mb-1">
                                        <span class="fst-italic">No files attached yet.</span>
                                    </div>
                                </div>
                            </div>


                        </div>

                        <form id="uploadForm">

                            <!--Button carousel-->
                            <div class="d-flex flex-row justify-content-between align-items-center">
                                <div>
                                    <label for="fileUpload" class="file-upload btn btn-dark btn-block"> <i
                                            class="fa fa-solid fa-file fa-lg pe-1"></i>
                                        </i>Attach Files
                                        <input class="d-none" id="fileUpload" type="file" multiple>
                                    </label>
                                </div>
                                <div>
                                    <button id="submitAssn" type="button" class="btn btn-success">
                                        <i class="fa fa-solid fa-check fa-lg pe-1"></i>
                                        Submit
                                    </button>
                                </div>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
            <!--Assignment information card-->
            <div class="d-flex flex-column col-4">
                <div class="m-1">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">ASSIGNMENT INFORMATION</h5>
                            <p>Assignment Overview:</p>
                            <p>
                                <%=pageData.assignment.overview%>
                            </p>
                            <p class="m-0">Due Date: Sunday, October 15, 2023</p>
                            <p class="pt-2">Assignment Points: 60</p>
                        </div>

                        <div class="d-flex flex-row justify-content-center">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">REQUIRED FILES:</h5>
                                <div class="list-group list-group">
                                    <%for(var i=0;i<pageData.assignment.requiredFiles.length;i++) {%>
                                        <div class="list-group-item d-flex flex-row align-items-center">
                                            <i class="fa fa-solid fa-file fa-lg"></i>
                                            <p class="mb-0 mx-2">
                                                <%=pageData.assignment.requiredFiles[i].name%>
                                            </p>
                                        </div>
                                        <%}%>
                                </div>
                            </div>

                        </div>


                    </div>

                </div>
            </div>


        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Comments</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"
                            placeholder="Add your comments here..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-success">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <template id="fileAttachmentTemplate">
        <div class="list-group-item d-flex flex-row justify-content-between align-items-center border">
            <span>fileplaceholder</span>
            <span class="border rounded p-1 px-2">sizeplaceholder</span>
        </div>
    </template>

</body>

</html>