<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Assignment Submission Home</title>
    <script src="https://kit.fontawesome.com/30c24fe6a1.js" crossorigin="anonymous"></script>
    <script type="module" src="js/assnSub.js"></script>

</head>

<body>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <!--Navbar-->
        <div class="m-3 border container">
            <nav class="p-3 navbar navbar-expand-sm navbar bg-white">
                <a class="navbar-brand" href="#">Submitly</a>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav me-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="#" aria-current="page"><%=pageData.course.name%></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="#"><%=pageData.assignment.name%></a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="d-flex flex-row justify-content-center container p-0 h-75">

            <!--Assignment information card-->
            <div class="d-flex flex-column col-8">
                <div class="m-1">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">ASSIGNMENT INFORMATION</h5>
                            <p>Assignment Overview:</p>
                            <p>
                                <%=pageData.assignment.overview%>
                            </p>
                            <p class="m-0">Due Date: <%=pageData.assignment.dueDate%></p>
                            <p class="pt-2">Assignment Points: <%=pageData.assignment.maxScore%></p>
                        </div>

                        <div class="d-flex flex-row justify-content-center">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">REQUIRED FILES:</h5>
                                <div class="list-group list-group">
                                    <%for(var i=0;i<pageData.assignment.requiredFiles.length;i++) {%>
                                    <div class="list-group-item d-flex flex-row align-items-center">
                                        <i class="fa fa-solid fa-file fa-lg"></i>
                                        <p class="mb-0 mx-2"><%=pageData.assignment.requiredFiles[i].name%></p>
                                    </div>
                                    <%}%>
                                </div>
                            </div>

                            <!--Unit tests card-->
                            <div class="card-body h-100">
                                <h5 class="card-title fw-bold">UNIT TESTS</h5>
                                <ul class="list-group list-group-numbered">
                                <%for(var i=0;i<pageData.assignment.unitTests.length;i++){%>
                                    <li class="list-group-item"><%=pageData.assignment.unitTests[i].name%></li>
                                <%}%>
                                </ul>
                            </div>
                        </div>


                    </div>

                </div>
            </div>

            <!--Submission Card-->
            <div class="m-1 col-4">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column flex-shrink-0">
                        <div class="flex-grow-1 flex-0">
                            <div class="mb-3 d-flex flex-row justify-content-between align-items-center">
                                <h5 class="card-title fw-bold">SUBMISSIONS</h5>
                                <a href=<%=`/newSub?assnID=${pageData.assignment.id}`%> class="btn btn-dark">Create New
                                    Submission</a>
                            </div>
                            <div class="list-group list-group">
                                <%for(var i=0;i<pageData.attempts.length;i++){%>
                                    <div
                                        class="list-group-item d-flex flex-row justify-content-between align-items-center">
                                        <div>
                                            <a class="text-decoration-none text-dark" href=<%=`/viewSubmission?subID=${pageData.attempts[i].id}`%>>Attempt <%=pageData.attempts[i].attemptNo%></a>
                                            <!-- <span class="text-secondary"><%=pageData.attempts[i].date%></span> -->
                                        </div>
                                        <span class="border rounded p-1 px-2">
                                            <%=pageData.attempts[i].score%>/<%=pageData.attempts[i].maxScore%>
                                        </span>
                                    </div>
                                    <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>




        </div>
    </div>


</body>

</html>